{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "Calcutron",
	"version": "1.0.0",
	"identifier": "com.calcutron.app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:4000",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"windows": [
			{
				"title": "Calcutron - Кроссплатформенный калькулятор",
				"width": 800,
				"height": 600,
				"minWidth": 400,
				"minHeight": 500,
				"resizable": true,
				"fullscreen": false,
				"center": true,
				"decorations": true,
				"alwaysOnTop": false,
				"skipTaskbar": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "nsis",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"category": "Utility",
		"shortDescription": "Современный кроссплатформенный калькулятор",
		"longDescription": "Calcutron - это современный, быстрый и удобный калькулятор для Windows, Linux и macOS. Поддерживает базовые арифметические операции, историю вычислений и автоматическое переключение темы.",
		"copyright": "Copyright © 2025 Calcutron Team",
		"license": "MIT",
		"licenseFile": "../LICENSE",
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": "",
			"nsis": {
				"displayLanguageSelector": false,
				"languages": ["English", "Russian"]
			}
		}
	}
}
